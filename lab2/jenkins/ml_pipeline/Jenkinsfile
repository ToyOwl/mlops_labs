pipeline {
    agent { docker { image 'python:3.10.10' } }
    environment {
        HOME = "${env.WORKSPACE}"
    }
    stages {
        stage('info') {
            steps {
                sh 'ls'
                sh 'pwd'
            }
        }
        stage('install requirements') {
            steps {
                sh 'pip install -r lab2/jenkins/ml_pipeline/requirements.txt'
            }
        }
        stage('Create data') {
            steps {
                sh 'python3 lab2/jenkins/ml_pipeline/data_creation.py'
            }
        }
        stage('Preprocessing data') {
            steps {
                sh 'python3 lab2/jenkins/ml_pipeline/data_preprocessing.py'
            }
        }
        stage('Prepare model') {
            steps {
                sh 'python3 lab2/jenkins/ml_pipeline/model_preparation.py'
            }
        }
        stage('Test model') {
            steps {
                sh 'python3 lab2/jenkins/ml_pipeline/model_testing.py'
            }
        }
        stage('Archive artifacts') {
            steps {
                archiveArtifacts artifacts: 'lab2/models/**', followSymlinks: false
            }
        }
        stage('Cleaning') {
            steps {
                sh 'python3 lab2/jenkins/ml_pipeline/cleaner.py'
            }
        }
    }
}